<%= simple_form_for([@event, @post]) do |f| %>
<%#= simple_form_for(@post) do |f| %>

  <input type="hidden" id="event_Id" name="event_Id" value="<% @event.id %>">

  <form>
    <div class="field">
      <div class="control">
        <label class="label">Title</label>
        <%= f.text_field :title, class: "input is-large" %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <label class="label">Content</label>
        <%= f.text_area :content, class: "input is-large textarea is-info", rows: "6" %>
      </div>
    </div>


    <%= f.submit "Create Event", class: "button is-block is-info is-large is-fullwidth" %>


  </form>

<% end %>


