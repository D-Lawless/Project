<%= form_with(model: @event, local: true) do |f| %>

  <form>
    <div class="field">
      <div class="control">
        <label class="label">Title</label>

        <%= f.text_field :title, class: "input is-large" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">About</label>
        <%= f.text_area :description, class: "input is-large textarea", rows: "10" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">Cover Photo</label>
        <%= f.file_field :cover_photo, multiple: false, direct_upload: true %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">Location</label>
        <%= f.text_field :location, class: "input is-large" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">Start Date</label>
        <%= f.datetime_select :start_dt, class: "input is-large" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">End Date</label>
        <%= f.datetime_select :end_dt, class: "input is-large" %>
      </div>
    </div>



    <%= f.submit "Create Event", class: "button is-block is-dark is-large is-fullwidth" %>


  </form>
<% end %>








