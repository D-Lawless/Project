<section>
  <div class="column ">
    <% if @events.count == 0 %>
      <div class="box">
        <article class="media">
          <div class="media-content">
            <div class="content has-text-centered">
              <h2>Oppps . . . There seems to be no events!</h2>
            </div>
          </div>
        </article>
      </div>
    <% else %>
      <% @events.each do |event| %>
        <div class="box ">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <img src="https://bulma.io/images/placeholders/64x64.png">
                <h4><%= link_to '@' + event.user.username, event.user.profile %></h4>
              </figure>
            </div>
            <div class="media-content has-text-centered">
              <div class="content">
                <h4><%= event.title %></h4>
                <h4><%= event.description %></h4>
                <h4><%= event.location %></h4>
              </div>
                <small><%= event.start_dt %></small> <br>
                <small><%= event.end_dt %></small>
              <br>

                <%= link_to 'Show', event %>
              <br>

                <% if current_user == event.user %>
                  <%= link_to 'destroy', event, method: :delete, data: {confirm: "Are you sure you want to delete this event?"} %>
                <% end %>


            </div>
          </article>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
