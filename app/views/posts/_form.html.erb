<%= simple_form_for([@event, @newpost]) do |f| %>
  <form>

    <div class="field">
      <div class="control">
        <label class="label">Title</label>
        <%= f.text_field :title, class: "input is-large", require:'required' %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <label class="label">Content</label>
        <%= f.text_area :content, class: "input is-large textarea is-info", rows: "4" , require: 'required' %>
      </div>
    </div>

    <%= f.submit "Create Post", class: "button is-block is-info is-large is-fullwidth" %>

  </form>

<% end %>


