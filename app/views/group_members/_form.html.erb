<%= form_with(model: @group_member, local: true) do |f| %>

  <form>
    <div class="field">
      <div class="control">
        <label class="label">Title</label>

        <%= f.text_field :title, class: "input is-large" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">About</label>
        <%= f.text_area :description, class: "input is-large textarea is-info", rows: "10" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">Location</label>

        <%= f.text_field :location, class: "input is-large" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">Start Date</label>

        <%= f.date_field :start_dt, class: "input is-large" %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <label class="label">End Date</label>

        <%= f.date_field :end_dt, class: "input is-large" %>
      </div>
    </div>


    <%= f.submit "Create Event", class: "button is-block is-info is-large is-fullwidth" %>


  </form>
<% end %>